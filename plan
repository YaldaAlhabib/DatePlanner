<div class="wrap">
  <div class="card">
    <h1>ðŸ’Œ Date plan</h1>
    <div class="muted" id="sub"></div>
    <div id="itinerary" class="out">Loadingâ€¦</div>

    <h3 style="margin-top:16px">Reply</h3>
    <div class="actions">
      <button id="yes">Iâ€™m in</button>
      <button class="ghost" id="maybe">Maybe</button>
      <button class="ghost" id="no">Canâ€™t</button>
    </div>
    <div style="margin-top:10px">
      <label class="muted">Add a note (optional)</label>
      <textarea id="note" placeholder="Time that works for me isâ€¦"></textarea>
    </div>
    <div class="actions">
      <button id="send">Send reply</button>
    </div>
    <div class="muted" id="status" style="margin-top:8px"></div>
  </div>
</div>

<script type="module">
  import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
  import { getFirestore, doc, getDoc, collection, addDoc, serverTimestamp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-firestore.js";

  // SAME CONFIG AS index.html
  const firebaseConfig = {
    apiKey: "YOUR_KEY",
    authDomain: "YOUR_PROJECT.firebaseapp.com",
    projectId: "YOUR_PROJECT",
    storageBucket: "YOUR_PROJECT.appspot.com",
    messagingSenderId: "â€¦",
    appId: "â€¦"
  };
  const app = initializeApp(firebaseConfig);
  const db = getFirestore(app);

  const params = new URLSearchParams(location.search);
  const id = params.get('id');
  const $ = s => document.querySelector(s);

  if(!id){ $('#itinerary').textContent = 'Missing plan id.'; throw new Error('no id'); }

  // Load plan
  const planRef = doc(db, 'plans', id);
  const snap = await getDoc(planRef);
  if(!snap.exists()){
    $('#itinerary').textContent = 'This plan was not found.';
  } else {
    const data = snap.data();
    $('#sub').textContent = `${data.city} â€¢ ${data.currency} â€¢ ${data.selections?.vibe ?? ''}`;
    $('#itinerary').textContent = `${data.message}\n\n---\n${data.itinerary}`;
  }

  // Reply
  let answer = 'yes';
  $('#yes').addEventListener('click', ()=>{ answer='yes'; });
  $('#maybe').addEventListener('click', ()=>{ answer='maybe'; });
  $('#no').addEventListener('click', ()=>{ answer='no'; });

  $('#send').addEventListener('click', async ()=>{
    try{
      const note = $('#note').value.trim();
      await addDoc(collection(planRef, 'responses'), { answer, note, createdAt: serverTimestamp() });
      $('#status').textContent = 'Sent! ðŸ’«';
      $('#send').disabled = true;
    }catch(e){
      console.error(e);
      $('#status').textContent = 'Could not send.';
    }
  });
</script>

  .card{background:var(--card);border:1px solid #f4b6c4;border-radius:16px;padding:16px;box-shadow:0 10px 30px rgba(0,0,0,.06)}
  h1{margin:0 0 10px}
  .out{white-space:pre-wrap;border:1px solid #f4b6c4;border-radius:12px;padding:12px;background:#fff;margin-top:8px}
  .actions{display:flex;gap:8px;flex-wrap:wrap;margin-top:12px}
